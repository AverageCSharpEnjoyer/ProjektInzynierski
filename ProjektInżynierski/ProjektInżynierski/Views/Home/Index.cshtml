@{
    ViewData["Title"] = "Home Page";
}

<!-- Header -->
<header>
    <div class="mt-3 text-white container">
        <div>
            <h1>Jak to działa?</h1>
        </div>
    </div>
</header>

<!-- Cipher | Decipher -->
<section>
    <div class="mt-5 container">

        <div class="row">

            <div class="col">
                <div class="card py-4 h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-image text-warning mb-2"></i>
                        <h4>Szyfrowanie w zdjęciu</h4>
                        <hr>
                        <ol class="text-left mt-2">
                            <li>Załaduj zdjęcie.</li>
                            <li>Wpisz swoją wiadomość.</li>
                            <li>Pobierz zdjęcie z zaszyfrowaną wiadomością.</li>
                        </ol>
                        <a class="btn btn-dark mt-4" asp-area="" asp-controller="Home" asp-action="Cipher">Zaszyfruj</a>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="card py-4 h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-file-alt text-warning mb-2"></i>
                        <h4>Odszyfrowanie wiadomości</h4>
                        <hr>
                        <ol class="text-left mt-2">
                            <li>Załaduj zdjęcie oryginalne.</li>
                            <li>Załaduj zdjęcie z wiadomością.</li>
                            <li>Gotowe!</li>
                        </ol>
                        <a class="btn btn-dark mt-4" asp-area="" asp-controller="Home" asp-action="Decipher">Odszyfruj</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>


