@{
    ViewData["Title"] = "Deszyfrowanie";
}


<div class="mt-3 card py-4 h-100 container">
    <h1>@ViewData["Title"]</h1>
    <div class="mt-3 row">
        <div class="col">
            <form method="post" enctype="multipart/form-data">

                <div class="form-group">
                    <div class="custom-file">
                        <input name="encryptedFile" type="file" class="custom-file-input" id="encryptedFile">
                        <label class="custom-file-label" for="encryptedFile">Zaszyfrowany obraz</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="custom-file">
                        <input name="originalFile" type="file" class="custom-file-input" id="originalFile">
                        <label class="custom-file-label" for="originalFile">Oryginalny obraz</label>
                    </div>
                   
                </div>
                <button type="submit" class="btn btn-primary">Odszyfruj</button>
            </form>
        </div>
    </div>

    <label>@ViewData["decryptedMessage"]</label>

</div>


