@{
    ViewData["Title"] = "Deszyfrowanie";
}
<h1>@ViewData["Title"]</h1>


<div class="container">
    <div class="row">
        <div class="col">
            <form method="post" onsubmit="allowDownload(); return false;">
                <div class="form-group">
                    <label for="exampleFormControlFile1">Zaszyfrowany obraz:</label>
                    <input type="file" class="form-control-file" id="exampleFormControlFile1">
                </div>
                <button type="submit" class="btn btn-primary">Odszyfruj</button>
            </form>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <div id="fileToDownload" style="display:none;">
                <input type="text" readonly class="form-control-plaintext" id="idMessage" value="Twoja wiadomość...">
            </div>
        </div>

    </div>
</div>


